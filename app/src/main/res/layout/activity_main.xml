<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <RelativeLayout
                android:layout_marginTop="100dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Topic -->
                <TextView
                    android:id="@+id/txt_topic"
                    android:text="Find spare parts prices"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>

                <!-- Vehicle model input -->
                <TextView
                    android:id="@+id/txt_vehicle_model"
                    android:layout_marginTop="100dp"
                    android:layout_below="@+id/txt_topic"
                    android:text="Vehicle model:"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <Spinner
                    android:id="@+id/spin_vehicle_model"
                    android:layout_marginTop="100dp"
                    android:layout_below="@id/txt_topic"
                    android:layout_alignParentRight="true"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content">
                </Spinner>

                <!-- Vehicle type input -->
                <TextView
                    android:id="@+id/txt_vehicle_type"
                    android:layout_marginTop="50dp"
                    android:layout_below="@+id/txt_vehicle_model"
                    android:text="Vehicle type:"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <Spinner
                    android:id="@+id/spin_vehicle_type"
                    android:layout_marginTop="50dp"
                    android:layout_below="@id/txt_vehicle_model"
                    android:layout_alignParentRight="true"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content">
                </Spinner>

                <!-- Spare part type input -->
                <TextView
                    android:id="@+id/txt_spare_part"
                    android:layout_marginTop="50dp"
                    android:layout_below="@+id/txt_vehicle_type"
                    android:text="Spare part type:"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <Spinner
                    android:id="@+id/spin_spare_part"
                    android:layout_marginTop="50dp"
                    android:layout_below="@id/txt_vehicle_type"
                    android:layout_alignParentRight="true"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content">
                </Spinner>

                <!-- Search button -->
                <Button
                    android:id="@+id/btn_search"
                    android:text="SEARCH"
                    android:textSize="20dp"
                    android:layout_marginTop="150dp"
                    android:layout_below="@id/txt_spare_part"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </Button>
            </RelativeLayout>
    </LinearLayout>

</ScrollView>