<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".spareparts.SparePartsMainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/parts_img"
                android:layout_centerHorizontal="true">
            </ImageView>

            <!-- Topic -->
            <TextView
                android:id="@+id/txt_topic"
                android:text="Find spare parts prices"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView">
            </TextView>

            <!-- Vehicle model input -->
            <TextView
                android:id="@+id/txt_vehicle_model"
                android:layout_marginTop="60dp"
                android:layout_below="@+id/txt_topic"
                android:text="Vehicle model:"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black">
            </TextView>

            <Spinner
                android:id="@+id/spin_vehicle_model"
                android:layout_marginTop="20dp"
                android:layout_below="@id/txt_vehicle_model"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/black">
            </Spinner>

            <!-- Vehicle type input -->
            <TextView
                android:id="@+id/txt_vehicle_type"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/spin_vehicle_model"
                android:text="Vehicle type:"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black">
            </TextView>

            <Spinner
                android:id="@+id/spin_vehicle_type"
                android:layout_marginTop="20dp"
                android:layout_below="@id/txt_vehicle_type"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/black">
            </Spinner>

            <!-- Spare part type input -->
            <TextView
                android:id="@+id/txt_spare_part"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/spin_vehicle_type"
                android:text="Spare part type:"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black">
            </TextView>

            <Spinner
                android:id="@+id/spin_spare_part"
                android:layout_marginTop="20dp"
                android:layout_below="@id/txt_spare_part"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/black">
            </Spinner>

            <!-- Select the year -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_year"
                android:text="For the year of:"
                android:textSize="20dp"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/spin_spare_part"
                android:textColor="@color/black">
            </TextView>

            <Spinner
                android:id="@+id/spin_year"
                android:layout_marginTop="20dp"
                android:layout_below="@id/txt_year"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/black">
            </Spinner>

            <!-- Search button -->
            <Button
                android:id="@+id/btn_search"
                android:text="SEARCH"
                android:textSize="20dp"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="50dp"
                android:layout_below="@id/spin_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#1589FF">
            </Button>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>